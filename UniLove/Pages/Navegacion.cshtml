        margin: 0 auto;
    }

    .logo-container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
    }

    .logo {
        font-size: 3rem;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif bold;
