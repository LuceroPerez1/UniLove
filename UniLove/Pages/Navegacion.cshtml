    .hidden {
        display: none;
    }

    body {
        margin: 0;
        background-color: #FF007F;
        font-family: Arial, sans-serif;
    }

    .usuario p {
        font-weight: bold;
        font-size: 2.5rem;
    }

    .btn-pink {
        background-color: #FF007F;
        color: white;
        border: none;
        border-radius: 8px;
