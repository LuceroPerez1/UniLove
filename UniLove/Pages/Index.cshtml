        background-color: #FF007F;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    .login-container {
        text-align: center;
        color: white;
    }

        .login-container h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .login-container p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

    .form-control {
        background-color: #f0f0f0;
        border: none;
        border-radius: 30px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .input-width {
        width: 100%;
        max-width: 360px;
        margin: 0 auto;
    }

    .btn-login {
        background-color: #FF4DA6;
        border: none;
        border-radius: 30px;
        padding: 10px 40px;
        color: white;
        font-size: 1.1rem;
    }

        .btn-login:hover {
            background-color: #e60073;
        }

    .btn-create-account {
        background-color: transparent;
        color: white;
