@page
@model UniLove.Pages.CreateAccountModel
@{
}
<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="container">
            <h1 class="logo">Uni<span>Love</span></h1>
            <p>¿Qué modo deseas jugar?</p>

            <div class="options d-flex justify-content-center">
                @* BOTON DE PRUEBA *@
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="redirectToCreateAccount()">Entendido</button>
                <a class="option" asp-page="CrearCuentaModoPareja">
                    <div class="image-container">
                        <img src="https://i.pinimg.com/564x/a5/d7/b1/a5d7b196a47ffd7742eb5230113b91fc.jpg" alt="Pareja">
                        <div class="overlay">
                            <p class="hover-text">Encuentra a tu alma gemela</p>
                        </div>
                    </div>
                    <p>Pareja</p>
                </a>
                <a class="option" asp-page="CrearCuentaModoAmigos">
                    <div class="image-container">
                        <img src="https://i.pinimg.com/originals/05/12/65/051265325e24f764ed7caef6006d0efd.jpg" alt="Amigos">
                        <div class="overlay">
                            <p class="hover-text">Crea nuevas amistades</p>
                        </div>
                    </div>
                    <p>Amigos</p>
                </a>
                <a class="option" asp-page="CrearCuentaModoTutor">
                    <div class="image-container">
                        <img src="https://i.pinimg.com/564x/9d/e6/4e/9de64e862c8136ebebf4da58bcdafbae.jpg" alt="Tutor Académico">
                        <div class="overlay">
                            <p class="hover-text">Encuentra el apoyo académico que necesitas</p>
                        </div>
                    </div>
                    <p>Tutor Académico</p>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
    }

    .container {
        text-align: center;
        border-radius: 15px;
        padding: 20px;
        font-size: 20px;
    }

    .logo {
        font-size: 3rem;
        color: #FF007F;
    }

        .logo span {
            color: #a8005b;
        }

    p {
        margin-bottom: 10px;
        color: #333;
    }

    .options {
        flex-wrap: wrap;
    }

    .option {
        text-align: center;
        cursor: pointer;
        margin: 10px;
        text-decoration: none; /* Quita el subrayado del enlace */
    }

    .image-container {
        position: relative;
    }

        .image-container img {
            width: 250px;
            height: 200px;
            border-radius: 10px;
            object-fit: cover;
            transition: filter 0.3s ease;
        }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5); /* Capa oscura */
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .hover-text {
        color: white;
        font-size: 1.2rem;
        text-align: center;
        padding: 10px;
    }

    .image-container:hover img {
        filter: brightness(50%); /* Obscurece la imagen */
    }

    .image-container:hover .overlay {
        opacity: 1;
    }
</style>
