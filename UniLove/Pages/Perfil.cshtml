@page
@model UniLove.Pages.PerfilModel
@{
}
<div class="custom-container vh-100 d-flex flex-column justify-content-start align-items-center bg-light">
    <div class="w-100 d-flex justify-content-between align-items-start p-3 mt-2">
        <!-- Icono de mensajes en la esquina superior izquierda -->
        <div>
            <a href="/Navegacion" title="Volver a página principal">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width: 45px; height: 45px; color: #FF007F;">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
                </svg>
            </a>
        </div>

        <!-- Texto UniLove entre los iconos -->
        <div class="logo-container d-flex align-items-center">
            <h1 class="logo mb-0">Uni<span>Love</span></h1>
        </div>
    </div>

    <!-- Formulario para la edición de información del usuario -->
    <form method="post" class="user-info text-center mt-4">
        <h1>Perfil de @Model.Usuarios.NombreUsuario</h1>

        <!-- Campo Nombre de Usuario -->
        <p>
            <strong>Nombre de Usuario:</strong>
            <span id="nombreUsuario">@Model.Usuarios.NombreUsuario</span>
            <input type="text" name="NombreUsuario" value="@Model.Usuarios.NombreUsuario" class="d-none form-control mt-2" id="nombreUsuarioInput" />
            <button type="button" onclick="enableEdit('nombreUsuario')" class="btn-icon ms-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" style="width: 20px; height: 20px; color: #FF007F;">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                </svg>
            </button>
        </p>

        <!-- Campo Correo Electrónico -->
        <p>
            <strong>Correo Electrónico:</strong>
            <span id="correoElectronico">@Model.Usuarios.CorreoElectronico</span>
            <input type="email" name="CorreoElectronico" value="@Model.Usuarios.CorreoElectronico" class="d-none form-control mt-2" id="correoElectronicoInput" />
            <button type="button" onclick="enableEdit('correoElectronico')" class="btn-icon ms-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" style="width: 20px; height: 20px; color: #FF007F;">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                </svg>
            </button>
        </p>
        <!-- Campo Correo Electrónico -->
        <p>
            <strong>Contraseña:</strong>
            <span id="contraseña">@Model.Usuarios.Contraseña</span>
            <input type="text" name="Contraseña" value="@Model.Usuarios.Contraseña" class="d-none form-control mt-2" id="contraseñaInput" />
            <button type="button" onclick="enableEdit('contraseña')" class="btn-icon ms-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" style="width: 20px; height: 20px; color: #FF007F;">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                </svg>
            </button>
        </p>
        <p><strong>Fecha de Nacimiento:</strong> @Model.Usuarios.FechaNacimiento.ToString("dd/MM/yyyy")</p>
        <p><strong>Orientación Sexual:</strong> @Model.Usuarios.OrientacionSexual</p>
        <p><strong>Desea Buscar:</strong> @Model.Usuarios.DeseaBuscar</p>
        <p><strong>Género:</strong> @Model.Usuarios.Genero</p>
        <p><strong>Facultad:</strong> @Model.Usuarios.Facultad</p>

        <!-- Botón para guardar cambios -->
        <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
    </form>
    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('¿Estás seguro de que deseas eliminar tu cuenta? Esta acción no se puede deshacer.');">
        <button type="submit" class="btn btn-danger mt-3">Eliminar mi cuenta</button>
    </form>
</div>

<!-- Estilos personalizados -->
<style>
    .btn-icon {
        background: none;
        border: none;
        padding: 0;
        cursor: pointer;
    }

        .btn-icon:focus {
            outline: none;
        }
</style>

<!-- JavaScript para habilitar edición -->
<script>
    function enableEdit(fieldId) {
        document.getElementById(fieldId).classList.add("d-none"); // Oculta el texto
        document.getElementById(fieldId + "Input").classList.remove("d-none"); // Muestra el campo de entrada
    }
</script>


<!-- Estilos personalizados -->
<style>
    body {
        margin: 0;
        background-color: #FF007F;
        font-family: Arial, sans-serif;
    }

    .custom-container {
        max-width: 800px;
        width: 100%;
        margin: 0 auto;
    }

    /* Estilos para el logo de UniLove */
    .logo {
        font-size: 2.5rem;
        color: #FF007F;
    }

        .logo span {
            color: darkgray;
        }

    /* Icono de perfil centrado */
    .profile-icon {
        display: flex;
        justify-content: center;
        margin-top: -10px;
    }

    /* Estilo para la información del usuario centrada */
    .user-info {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>




